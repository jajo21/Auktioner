@model AddItemViewModel
@{
    ViewData["Title"] = "Lägg till objekt";
}

<form asp-action="Add" method="post" class="form-horizontal" role="form">
    <h4>Skriv in uppgiferna till objektet du vill lägga till.</h4>

    <div asp-validation-summary="All" class="text-danger"></div>

    <input hidden asp-for="Purchaser" />

    <div class="form-group">
        <label asp-for="AuctionItemId" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.AuctionItemId, new {placeholder = "Ex. ABC123456", @class = "form-control"})
            <span asp-validation-for="AuctionItemId" class="text-danger"></span>
            <span class="text-danger">@ViewBag.IDExists</span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Costs" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Costs" class="form-control" />
            <span asp-validation-for="Costs" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="StartingPrice" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="StartingPrice" class="form-control" />
            <span asp-validation-for="StartingPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Decade" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Decade, new {placeholder = "Ex. 1990", @class = "form-control"})
            <span asp-validation-for="Decade" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CategoryName" class="col-md-2 control-label"></label>
        <select asp-for="CategoryName">
            @foreach(var category in Model.Categories)
            {
                <option class="form-control">@category.CategoryName</option>
            }
        </select>    
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Spara" />
        </div>
    </div>

</form>