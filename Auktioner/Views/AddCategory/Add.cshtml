@model AddCategoryViewModel

<h4>Det här är de nuvarande kategorierna som finns tillgängliga:</h4>
<div class="col-md-2">
    @foreach(var category in Model.Categories)
    {
        <p>@category.CategoryName</p>                    
    }
</div>

<form asp-action="Add" method="post" class="form-horizontal" role="form">
    <h4>Skriv in namnet på den kategori du vill lägga till:</h4>

    <div asp-validation-summary="All" class="text-danger"></div>

    <input hidden asp-for="CategoryId" />

    <div class="form-group">
        <label asp-for="CategoryName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
            <span class="text-danger">@ViewBag.CategoryNameExists</span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Spara" />
        </div>
    </div>
</form>