@model Category
@inject ICategoryRepository _categoryRepository

<h4>Det här är de nuvarande kategorierna som finns tillgängliga:</h4>
<div class="col-md-2">
    @foreach(var category in _categoryRepository.AllCategories)
    {
        <p>@category.CategoryName</p>
    }
</div>

<form asp-action="Add" method="post" class="form-horizontal" role="form">
    <h4>Skriv in namnet på den kategori du vill lägga till</h4>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="@Model.CategoryName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.CategoryName" class="form-control" />
            <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Spara" />
        </div>
    </div>

</form>