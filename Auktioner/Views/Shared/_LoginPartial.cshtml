@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Inventory" asp-action="List">Inventarier</a></li> 
    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Sold" asp-action="List">Sålda objekt</a></li>
    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="AddItem" asp-action="Add">Lägg till Objekt</a></li>
    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="AddCategory" asp-action="Add">Lägg till Kategori</a></li>
    <li class="nav-item"><a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Välkommen @UserManager.GetUserName(User)!</a></li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logga ut</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Registera</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
    </li>
}
</ul>
